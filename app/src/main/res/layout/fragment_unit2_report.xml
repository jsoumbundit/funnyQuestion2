<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragment.Unit1ReportFragment">

    <TextView
        android:id="@+id/txtShowNameLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Login"
        android:textSize="@dimen/h1"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/reportSpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding8"
            android:background="@drawable/spin4" />

        <Button
            android:id="@+id/selectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding8"
            android:text="Report" />
    </LinearLayout>

<!--Overview Report-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview Report"
        android:textSize="@dimen/h2"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding8">
        <!--Roll1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Col1 - WarmUp Max. Score-->
            <LinearLayout
                android:background="@drawable/bg_clear2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding4">

                <!--text-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WarmUp"
                    android:textSize="@dimen/h3"/>

                <TextView
                    android:layout_marginTop="@dimen/padding8"
                    android:gravity="center"
                    android:id="@+id/txtWarmUpMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0%"
                    android:textSize="@dimen/h1"/>


            </LinearLayout>
            <!--Col2 - Practice Max. Score-->
            <LinearLayout
                android:layout_marginLeft="@dimen/padding8"
                android:background="@drawable/bg_clear2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding4">

                <!--text-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Practice"
                    android:textSize="@dimen/h3"/>

                <TextView
                    android:layout_marginTop="@dimen/padding8"
                    android:gravity="center"
                    android:id="@+id/txtPracticeMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0%"
                    android:textSize="@dimen/h1"/>


            </LinearLayout>
        </LinearLayout>
        <!--Roll2-->
        <LinearLayout
            android:layout_marginTop="@dimen/padding8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--Col1 Listening Max. Score-->
            <LinearLayout
                android:background="@drawable/bg_clear2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding4">

                <!--text-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Listening"
                    android:textSize="@dimen/h3"/>

                <TextView
                    android:layout_marginTop="@dimen/padding8"
                    android:gravity="center"
                    android:id="@+id/txtListeningMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0%"
                    android:textSize="@dimen/h1"/>

            </LinearLayout>
            <!--Col2 Language  Max. Score-->
            <LinearLayout
                android:layout_marginLeft="@dimen/padding8"
                android:background="@drawable/bg_clear2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding4">

                <!--text-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textSize="@dimen/h3"/>
                <TextView
                    android:layout_marginTop="@dimen/padding8"
                    android:gravity="center"
                    android:id="@+id/txtLanguageMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0%"
                    android:textSize="@dimen/h1"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="@dimen/padding8"-->
    <!--android:text="Unit 2"-->
    <!--android:textSize="@dimen/h1" />-->

    <LinearLayout
        android:layout_marginTop="@dimen/padding8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4D4B4B"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:text="Time Test"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Warm-up"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Practice"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Listening"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Language"
            android:textColor="#FFFFFF" />


    </LinearLayout>

    <!--show list score-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleScoreUnit1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>