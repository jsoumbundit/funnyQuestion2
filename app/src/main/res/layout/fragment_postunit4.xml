                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:text="@string/preUnit4styleText4"
                android:textSize="@dimen/h2"
                android:textStyle="bold" />


            <!--2. ADSL* is more commonly known as ……………………………………-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:text="@string/postUnit4styleText10"
                android:textSize="@dimen/h2"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/preunit4RdgPractice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding8"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/preunit4RbPractice2a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preUnit4styleText11" />

                <RadioButton
                    android:id="@+id/preunit4RbPractice2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preUnit4styleText12" />

                <RadioButton
                    android:id="@+id/preunit4RbPractice2c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preUnit4styleText13" />

                <RadioButton
                    android:id="@+id/preunit4RbPractice2d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preUnit4styleText14" />
            </RadioGroup>

            <!--5. Which can keep a public diary of your journey through South America?-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:text="@string/postUnit4styleText25"
                android:textSize="@dimen/h2"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/preunit4RdgPractice5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding8"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/preunit4RbPractice5a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preUnit4styleText26" />

                <RadioButton
                    android:id="@+id/preunit4RbPractice5b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/preUnit4styleText27" />

                <RadioButton
                    android:id="@+id/preunit4RbPractice5c"
                    android:layout_width="match_parent"
